{
  "name": "fusion-tables-drive-export",
  "description": "Export Google Fusion Tables to Google Drive",
  "version": "1.0.0",
  "license": "Apache License",
  "author": "Ubilabs",
  "engines": {
    "node": ">=10"
  },
  "repository": "https://github.com/ubilabs/fusion-tables-drive-export",
  "main": "server/index.js",
  "private": true,
  "scripts": {
    "start": "node server/index.js",
    "start:dev": "run-p 'start:dev:server' 'start:dev:server-static'",
    "start:dev:server": "nodemon --watch 'server-src/**/*.ts' --exec 'ts-node' server-src/index.ts",
    "start:dev:server-static": "parcel watch --no-hmr ./server-static-src/main.ts -d ./server-static",
    "build": "run-p 'build:server' 'build:server-static'",
    "build:server": "rm -rf server/* && tsc -p . && envify ./server/config/config.js > ./server/config/config.new.js && mv ./server/config/config.new.js ./server/config/config.js",
    "build:server-static": "parcel build ./server-static-src/main.ts -d ./server-static --experimental-scope-hoisting && yarn run prepend:header",
    "prepend:header": "run-s 'prepend:header:js' 'prepend:header:css'",
    "prepend:header:js": "for file in server-static/*.js; do cat server-static-src/license-header.txt $file > /tmp/out && mv /tmp/out $file; done",
    "prepend:header:css": "for file in server-static/*.css; do cat server-static-src/license-header.txt $file > /tmp/out && mv /tmp/out $file; done",
    "prettier:ci": "prettier --list-different '{server-static-src/*.ts,server-src/**/*.ts}'",
    "prettier:fix": "prettier --write '{server-static-src/*.ts,server-src/**/*.ts}'",
    "deploy": "yarn run test && yarn run build && gcloud app deploy && yarn run deploy:datastore-indexes && yarn run deploy:cron && yarn run deploy:dispatch",
    "deploy:datastore-indexes": "gcloud datastore indexes create index.yaml",
    "deploy:cron": "gcloud app deploy cron.yaml",
    "deploy:dispatch": "gcloud app deploy dispatch.yaml",
    "test": "yarn run prettier:ci && tslint -p . -e '**/*.json'"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "dependencies": {
    "@google-cloud/datastore": "^4.1.3",
    "@google-cloud/debug-agent": "^4.0.3",
    "@google-cloud/error-reporting": "^1.0.0",
    "@hapi/boom": "^7.4.2",
    "@tmcw/togeojson": "^3.0.0",
    "@types/promise-retry": "^1.1.3",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.4",
    "googleapis": "^41.0.1",
    "helmet": "^3.16.0",
    "json2csv": "^4.4.1",
    "node-fetch": "^2.3.0",
    "p-limit": "^2.2.0",
    "papaparse": "^5.2.0",
    "promise-retry": "^1.1.1",
    "pug": "^2.0.3",
    "uuid": "^3.3.2",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.36",
    "@types/express": "^4.16.1",
    "@types/geojson": "^7946.0.7",
    "@types/google.analytics": "^0.0.40",
    "@types/hapi__boom": "^7.4.0",
    "@types/helmet": "^0.0.43",
    "@types/json2csv": "^4.2.0",
    "@types/node": "^12.0.0",
    "@types/node-fetch": "^2.3.0",
    "@types/papaparse": "^4.5.9",
    "@types/uuid": "^3.4.4",
    "@types/xmldom": "^0.1.29",
    "envify": "^4.1.0",
    "nodemon": "^1.18.10",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.3",
    "prettier": "^1.16.4",
    "stylus": "^0.54.5",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  }
}
